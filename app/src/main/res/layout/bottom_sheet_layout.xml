<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_sheet"
    android:orientation="vertical">

    <!--    android:backgroundTint="@color/white"-->
    <!--    android:background="@drawable/rounded_bottom_sheet"-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/draggerPill"
                android:layout_width="32sp"
                android:layout_height="18sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/material_divider_color"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/subtext_dark"
                app:shapeAppearance="@style/PillShapeAppearance" />


            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:dividerInsetEnd="32dp"
                app:dividerInsetStart="32dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxShuffle" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:paddingBottom="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider"
                app:singleSelection="false">


                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="false"
                    android:includeFontPadding="true"
                    android:text="Base Pack"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHonestDating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Honest Dating"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Relationship"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInnerCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Inner Circle"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipBreakup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Breakup"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOwnIt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Own It"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipQuarantine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:includeFontPadding="true"
                    android:text="Quarantine"
                    android:textColor="@color/chip_text_state"
                    app:checkedIcon="@drawable/ic_round_check_24"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/chip_state"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/red"
                    app:textEndPadding="16dp"
                    app:textStartPadding="16dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/options"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/subtext_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/draggerPill" />

            <CheckBox
                android:id="@+id/checkBoxShuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:button="@drawable/ic_round_shuffle_24"
                android:padding="8dp"
                android:text="Shuffle"
                android:textColor="@color/shuffle_state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <CheckBox
                android:id="@+id/checkBoxDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:button="@drawable/dark_mode_icon_state"
                android:padding="8dp"
                android:text="Dark Mode"
                android:textColor="@color/dark_mode_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>








